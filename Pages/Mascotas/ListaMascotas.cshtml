                </p>

            </div>

            <div class="d-flex justify-content-center">
                <nav class="navbar navbar-light bg-light"
                    style="width: 310px; padding: 10px; border-style:none; border-radius: 5%;">
                    <form class="form-inline">
                        <input class="form-control mr-sm-2" type="search" placeholder="idMascota" aria-label="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>
                    </form>
                </nav>
            </div>

            <table class="table table-sm" , style=" width: 75%; border-style: double; background-color:#f2f2f2;">
                <caption style="align-items:center;">Lista de Mascotas</caption>


                <tr style="background-color: #eaf3f8;">
                    <strong>
                        <th scope="col">Nombre </th>
                        <th scope="col">Color</th>
                        <th scope="col">Especie</th>
                        <th scope="col">Raza </th>
                        <th scope="col">Dueño </th>

                    </strong>
                </tr>


                @foreach (var mascota in Model.ListaMascotas)
                {
                    <tr>
                        <td>@mascota.Nombre</td>
                        <td>@mascota.Color</td>
                        <td>@mascota.Especie</td>
                        <td>@mascota.Raza</td>
                        <td>@mascota.Dueno</td>

                        <td>
                            <a class="btn btn-primary table btn" asp-page="./DetallesMascotas"
                            asp-route-mascotaId="@mascota.Id">
                                Detalles Mascotas
                            </a>
                        </td>

                        <td>
                            <a class="btn btn-primary table btn" asp-page="./EditarMascotas" asp-route-mascotaId="@mascota.Id">
                                Editar Mascotas
                            </a>
                        </td>

                        <td>
                            <a class="btn btn-primary table btn" asp-page="./BorrarMascotas" asp-route-mascotaId="@mascota.Id">
                                Borrar Mascotas
                            </a>
                        </td>

                    </tr>


                }

            </table>

        </DIV>

    </main>
